        <servlet-name>showHotBlogByComment</servlet-name>
        <servlet-class>servlet.showHotBlogByCommentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>showHotBlogByComment</servlet-name>
        <url-pattern>/showHotBlogByComment</url-pattern>
    </servlet-mapping>-->
    <!--用户删除自己的转发><!-->
    <servlet>
        <servlet-name>deleteForward</servlet-name>
        <servlet-class>servlet.deleteForwardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteForward</servlet-name>
        <url-pattern>/deleteForward</url-pattern>
    </servlet-mapping>




</web-app>