<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <!--用户注册><!-->
    <servlet>
        <servlet-name>addUserServlet</servlet-name>
        <servlet-class>servlet.addUserServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>addUserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <!--用户登录><!-->
    <servlet>
        <servlet-name>loginUserServlet</servlet-name>
        <servlet-class>servlet.loginUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginUserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!--用户修改密码><!-->
    <servlet>
        <servlet-name>changePassword</servlet-name>
        <servlet-class>servlet.changePasswordServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>changePassword</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>


    <!--用户写微博><!-->
    <servlet>
    <servlet-name>publishMessage</servlet-name>
    <servlet-class>servlet.publishMessageServlet</servlet-class>
</servlet>

    <servlet-mapping>
        <servlet-name>publishMessage</servlet-name>
        <url-pattern>/publishMessage</url-pattern>
    </servlet-mapping>



    <!--用户查看自己发布的微博><!-->
    <servlet>
        <servlet-name>showMessage</servlet-name>
        <servlet-class>servlet.showMessageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>showMessage</servlet-name>
        <url-pattern>/showMessage</url-pattern>
    </servlet-mapping>


    <!--用户删除自己发布的微博><!-->
    <servlet>
        <servlet-name>deleteBlog</servlet-name>
        <servlet-class>servlet.deleteBlogServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteBlog</servlet-name>
        <url-pattern>/deleteBlog</url-pattern>
    </servlet-mapping>


    <!--用户搜索其他用户><!-->
    <servlet>
        <servlet-name>searchUser</servlet-name>
        <servlet-class>servlet.searchUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>searchUser</servlet-name>
        <url-pattern>/searchUser</url-pattern>
    </servlet-mapping>


    <!--用户关注其他用户><!-->
    <servlet>
        <servlet-name>followUser</servlet-name>
        <servlet-class>servlet.followUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>followUser</servlet-name>
        <url-pattern>/followUser</url-pattern>
    </servlet-mapping>


    <!--用户查看其他用户的微博><!-->
    <servlet>
        <servlet-name>showFriendMessage</servlet-name>
        <servlet-class>servlet.showFriendMessageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>showFriendMessage</servlet-name>
        <url-pattern>/showFriendMessage</url-pattern>
    </servlet-mapping>


    <!--用户取消关注其他用户><!-->
    <servlet>
        <servlet-name>unFollowUser</servlet-name>
        <servlet-class>servlet.unFollowUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>unFollowUser</servlet-name>
        <url-pattern>/unFollowUser</url-pattern>
    </servlet-mapping>


    <!--用户查看他关注的用户><!-->
    <servlet>
        <servlet-name>showFollower</servlet-name>
        <servlet-class>servlet.showFollowerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>showFollower</servlet-name>
        <url-pattern>/showFollower</url-pattern>
    </servlet-mapping>



    <!--用户查看他的粉丝><!-->
    <servlet>
        <servlet-name>showFans</servlet-name>
        <servlet-class>servlet.showFansServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>showFans</servlet-name>
        <url-pattern>/showFans</url-pattern>
    </servlet-mapping>


    <!--用户评论微博><!-->
    <servlet>
        <servlet-name>addComment</servlet-name>
        <servlet-class>servlet.addCommentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addComment</servlet-name>
        <url-pattern>/addComment</url-pattern>
    </servlet-mapping>


    <!--用户转发微博><!-->
    <servlet>
        <servlet-name>addForward</servlet-name>
        <servlet-class>servlet.addForwardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addForward</servlet-name>
        <url-pattern>/addForward</url-pattern>
    </servlet-mapping>


    <!--用户删除自己的评论><!-->
    <servlet>
        <servlet-name>deleteComment</servlet-name>
        <servlet-class>servlet.deleteCommentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteComment</servlet-name>
        <url-pattern>/deleteComment</url-pattern>
    </servlet-mapping>



